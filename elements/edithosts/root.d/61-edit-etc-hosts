if [ "${DIB_DEBUG_TRACE:-0}" -gt 0 ]; then
    set -x
fi
set -eu
set -o pipefail

# Ensure /etc directory exists inside the target root
sudo mkdir -p "$TARGET_ROOT/etc"

# Write the standard localhost entries to /etc/hosts inside the target root
echo "Writing standard localhost entries to $TARGET_ROOT/etc/hosts..."

sudo tee "$TARGET_ROOT/etc/hosts" > /dev/null <<'EOF'
127.0.0.1   localhost localhost.localdomain localhost4 localhost4.localdomain4
::1         localhost localhost.localdomain localhost6 localhost6.localdomain6
EOF
